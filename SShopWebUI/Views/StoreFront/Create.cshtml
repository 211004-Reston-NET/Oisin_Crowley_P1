@model SShopWebUI.Models.StoreFrontVM
<h1 > Add a Storefront </h1>


<form asp-action="Create">
    <div class=" mb-3">
        <label asp-for="StoreName"class="form-label">Store Name</label>
        <input asp-for="StoreName" type="text" class="form-control" />
    </div>
    <div class=" mb-3">
        <label asp-for="StreetAdd"class="form-label">Street Address</label>
        <input asp-for="StreetAdd" type="text" class="form-control" />
    </div>
    <div class=" mb-3">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City"  type="text" class="form-control" />
    </div>
    <div class=" mb-3">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" type="text" class="form-control" />
    </div>
    <div class=" mb-3">
        <label asp-for="Zip" class="form-label">Zip</label>
        <input asp-for="Zip" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Submit</button>

</form>