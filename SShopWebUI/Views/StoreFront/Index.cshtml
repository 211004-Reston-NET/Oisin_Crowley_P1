@{
}
@model IEnumerable<SShopWebUI.Models.StoreFrontVM>
<h1> List of Stores </h1>

<a class=" btn btn-primary text-white" asp-controller="StoreFront" asp-action="Create"> Add A StoreFront </a>
<br />
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>Store Name</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
    </tr>
    
        @foreach(StoreFrontVM item in Model)
            {
<tr>
    <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
    <td>@Html.DisplayFor(modelItem => item.StreetAdd)</td>
    <td>@Html.DisplayFor(modelItem => item.City)</td>
    <td>@Html.DisplayFor(modelItem => item.State)</td>
</tr>
            }
    


</table>