
@{
}
@model IEnumerable<SupShopWebUI.Models.OrdersVM>
@{
    ViewData["itemName"] = "Search";
}


<h1> Orders </h1>

<a class=" btn btn-primary text-white" asp-controller="Order" asp-action="Create"> Place Order </a>
<br />
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>Order ID</th>
        <th>Total Price</th>
        <th>Customer ID</th>
        <th>Store ID</th>

    </tr>

    @foreach (OrdersVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrderID)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreID)</td>

        </tr>
    }
</table>
