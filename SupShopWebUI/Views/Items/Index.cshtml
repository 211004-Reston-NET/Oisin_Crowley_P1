
@{
}
@model IEnumerable<SupShopWebUI.Models.ItemsVM>
@{
    ViewData["itemName"] = "Search";
}


<h1> List of Stores </h1>

<a class=" btn btn-primary text-white" asp-controller="Items" asp-action="Create"> Add A Product </a>
<br />
<br />



<form asp-controller="Items" asp-action="Index" method="get">
    <p>
        Product: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>

</form>

<table class="table table-striped table-hover">
    <tr>
        <th>Item Name</th>
        <th>Item Price</th>
        <th>Description</th>
        <th>Category</th>
        <th>Quantity</th>
    </tr>

    @foreach (ItemsVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.itemName)</td>
            <td>@Html.DisplayFor(modelItem => item.itemPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.itemDesc)</td>
            <td>@Html.DisplayFor(modelItem => item.Category)</td>
            <td>@Html.DisplayFor(modelItem => item.itemQuanity)</td>
            <td><button class="btn btn-primary">@Html.ActionLink("Restock","Edit", new { p_id = item.ProductID },new { @style = "color:white;" })</button></td>
            <td><button class="btn btn-danger">@Html.ActionLink("Delete","Delete", new { p_id = item.ProductID }, new { @style = "color:white;" })</button></td>
            
        </tr>
    }



</table>