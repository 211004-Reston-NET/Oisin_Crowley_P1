@model SupShopWebUI.Models.ItemsVM
<h1> Add a Storefront </h1>


<form asp-action="Create">

    <div asp-validation-summary="ModelOnly"></div>
    <div class=" mb-3">

        <label asp-for="itemName" class="form-label">Product Name</label>
        <input asp-for="itemName" type="text" class="form-control" />
        <span asp-validation-for="itemName"></span>

    </div>
    <div class=" mb-3">
        <label asp-for="Category" class="form-label">Cateogry</label>
        <input asp-for="Category" type="text" class="form-control" />
        <span asp-validation-for="Category" class=" text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="itemDesc" class="form-label">Item Description</label>
        <input asp-for="itemDesc" type="text" class="form-control" />
        <span asp-validation-for="itemDesc" class=" text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="itemQuanity" class="form-label">Item Quantity</label>
        <input asp-for="itemQuanity" type="number" class="form-control" />
        <span asp-validation-for="itemQuanity" class=" text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="itemPrice" class="form-label">Item Price</label>
        <input asp-for="itemPrice" type="number" class="form-control" />
        <span asp-validation-for="itemPrice" class="text-danger"></span>
    </div>

    <div class=" mb-3">
        <label asp-for="StoreID" class="form-label">Store ID</label>
        <input asp-for="StoreID" type="number" class="form-control" />
        <span asp-validation-for="StoreID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Submit</button>

</form>