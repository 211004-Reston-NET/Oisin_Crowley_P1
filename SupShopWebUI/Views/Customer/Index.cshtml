
@{
}
@model IEnumerable<SupShopWebUI.Models.CustomerVM>
<h1> List of Stores </h1>

<a class=" btn btn-primary text-white" asp-controller="Customer" asp-action="Create"> Add A Customer </a>
<br />
<br />

<form asp-controller="Customer" asp-action="Index" method="get">
    <p>
        Customer Name: <input type="text" id="SearchString" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>

</form>

<table class="table table-striped table-hover">
    <tr>
        <th>Customer Name</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Phone Number</th>
        <th>Email</th>
    </tr>

    @foreach (CustomerVM item in Model)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
    <td>@Html.DisplayFor(modelItem => item.CustStreetAdd)</td>
    <td>@Html.DisplayFor(modelItem => item.CustCity)</td>
    <td>@Html.DisplayFor(modelItem => item.CustState)</td>
    <td>@Html.DisplayFor(modelItem => item.CustZip)</td>
    <td>@Html.DisplayFor(modelItem => item.CustPhone)</td>
    <td>@Html.DisplayFor(modelItem => item.CustEmail)</td>
    <td><button class="btn btn-primary">@Html.ActionLink("Info", "Details", new { p_id = item.CustomerId }, new { @style = "color:white;" })</button></td>
</tr>
    }



</table>