@model SupShopWebUI.Models.CustomerVM
<h1> Add a Customer </h1>


<form asp-action="Create">

    <div asp-validation-summary="ModelOnly"></div>
    <div class=" mb-3">

        <label asp-for="CustomerName" class="form-label">Customer Name</label>
        <input asp-for="CustomerName" type="text" class="form-control" />
        <span asp-validation-for="CustomerName"></span>

    </div>
    <div class=" mb-3">
        <label asp-for="CustStreetAdd" class="form-label">Street Address</label>
        <input asp-for="CustStreetAdd" type="text" class="form-control" />
        <span asp-validation-for="CustStreetAdd" class=" text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="CustCity" class="form-label">City</label>
        <input asp-for="CustCity" type="text" class="form-control" />
        <span asp-validation-for="CustCity" class=" text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="CustState" class="form-label">State</label>
        <input asp-for="CustState" type="text" class="form-control" />
        <span asp-validation-for="CustState" class=" text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="CustZip" class="form-label">Zip</label>
        <input asp-for="CustZip" type="number" class="form-control" />
        <span asp-validation-for="CustZip" class="text-danger"></span>
    </div>

    <div class=" mb-3">
        <label asp-for="CustPhone" class="form-label">Phone Number</label>
        <input asp-for="CustPhone" type="text" class="form-control" />
        <span asp-validation-for="CustPhone" class="text-danger"></span>
    </div>

    <div class=" mb-3">
        <label asp-for="CustEmail" class="form-label">Email Address</label>
        <input asp-for="CustEmail" type="text" class="form-control" />
        <span asp-validation-for="CustEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Submit</button>

</form>